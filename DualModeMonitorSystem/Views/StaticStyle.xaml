<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  首页导航栏字体样式  -->
    <Style x:Key="NavigationFont" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="FontFamily" Value="Inter, system-ui, sans-serif" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <!--  状态指示灯样式  -->
    <Style x:Key="StatusIndicatorStyle" TargetType="Border">
        <!--  基础样式：圆形  -->
        <Setter Property="Width" Value="12" />
        <!--  宽度  -->
        <Setter Property="Height" Value="12" />
        <!--  高度  -->
        <Setter Property="CornerRadius" Value="6" />
        <!--  圆角（宽高的一半，确保圆形）  -->
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#343E4E" />
        <!--  边框色（与背景协调）  -->

        <!--  不同状态的颜色（通过Tag属性切换）  -->
        <Style.Triggers>
            <Trigger Property="Tag" Value="Normal">
                <!--  正常（绿色）  -->
                <Setter Property="Background" Value="#52C41A" />
            </Trigger>
            <Trigger Property="Tag" Value="Warning">
                <!--  警告（黄色）  -->
                <Setter Property="Background" Value="#FAAD14" />
            </Trigger>
            <Trigger Property="Tag" Value="Error">
                <!--  错误（红色）  -->
                <Setter Property="Background" Value="#FF4D4F" />
            </Trigger>
            <Trigger Property="Tag" Value="Offline">
                <!--  离线（灰色）  -->
                <Setter Property="Background" Value="#718096" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>